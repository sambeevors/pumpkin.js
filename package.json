{
  "name": "pumpkin.js",
  "version": "0.3.1",
  "description": "A mini-library for helpful JS functions ðŸŽƒ",
  "author": "Sam Beevors",
  "license": "ISC",
  "scripts": {
    "dev": "microbundle watch --strict",
    "build": "microbundle --strict",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "vuepress build docs && ./deploy.sh",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm test",
      "prettier --write src/pumpkin.js",
      "git add src/pumpkin.js"
    ]
  },
  "main": "dist/pumpkin.js",
  "umd:main": "dist/pumpkin.umd.js",
  "module": "dist/pumpkin.mjs",
  "source": "src/pumpkin.js",
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.6.0",
    "regenerator-runtime": "^0.13.1",
    "vuepress": "^0.14.4"
  }
}
